<div class="my-5">
{% if content %}
  {{ content }}
{% endif %}

{% if logged_in %}
{% set login_link, login_text = 'admin/content', '后台管理' %}
{% else %}
{% set login_link, login_text = 'user/login', '登录后台' %}
{% endif %}
{%
  set links = [
    {href: '#', text: '旧版入口'},
    {href: login_link, text: login_text},
]
%}
          <div class="text-align-center">
{% for i in links %}
            <a class="text-black-50" href="{{ i.href }}">{{ i.text }}</a>    
{% endfor %}
          </div>
</div>
