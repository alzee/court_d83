{% set count = count ? count : 3 %}
{% set text = '湖北上半年GDP为17480亿元，就业形势总体稳定，农业生产稳步' %}

<ul class="list-group">
{% for i in 1..count %}
  <li class="list-group-item list-group-item-action border-0 d-flex justify-content-between py-2 news-list">
    <div>
      <div class="arrow-right d-inline-block mr-2"></div>
      <span>
        <a class="text-dark" href="{{ root }}/i.php/node">{{ text }}</a>
      </span>
    </div>
    <span class="text-secondary"> 2020年7月16日 </span>
  </li>
  {% if i is divisible by(7) and i != count %}
    <div class="border-top border-secondary m-3" style="height: 1px">
    <span>
    </span>
    </div>
  {% endif %}
{% endfor %}
</ul>
